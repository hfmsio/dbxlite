{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "types": ["@playwright/test", "node"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "./**/*.ts",
    "./tests/**/*.ts",
    "./pages/**/*.ts",
    "./fixtures/**/*.ts"
  ],
  "exclude": [
    "../src/**/*",
    "../node_modules",
    "../dist"
  ]
}
